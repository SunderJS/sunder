{
  "compilerOptions": {
    "outDir": "./build/lib",
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "WebWorker",
      "ESNext"
    ],
    "types": [
      "jest",
      "@cloudflare/workers-types"
    ],
    "moduleResolution": "node",
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
  },
  "include": [
    "./lib/**/*.ts"
  ],
  "exclude": [
    "node_modules/",
    "build/"
  ]
}